@page "/puzzle"
@rendermode InteractiveServer

@using SlidingTilesPuzzle.Components.Puzzle
@using SlidingTilesPuzzle.Models
@using SlidingTilesPuzzle.Services
@inject PuzzleService Puzzles
@inject ImageService Images
@inject NavigationManager Navigation
@inject IJSRuntime JsRuntime

<PageTitle>Game Start</PageTitle>

<div class="d-flex flex-column min-vh-100">
    <h1>SLIDING TILES PUZZLE...</h1>

    <div class="flex-grow-1 d-flex justify-content-center align-items-center text-center">
        <div class="puzzle-layout gap-5">
            <div class="d-flex flex-column gap-4 justify-content-center">
                <p class="text-center">Moves Counter: @Moves</p>

                <button class="refresh-btn" @onclick="NewGame">
                    NEW GAME
                </button>

                <button class="reset-btn" @onclick="Reshuffle">
                    RESET PUZZLE
                </button>

                <div class="d-flex flex-column">
                    <p class="text-center">Visual Hint: </p>
                    <ReferenceImage ImageUrl="@ImageUrl" />
                </div>   
            </div>

            <div class="board-wrapper" tabindex="0">
                <PuzzleBoard Tiles="Tiles"
                             ImageUrl="@ImageUrl"
                             OnTileClick="MoveTile" />

                <WinOverlay Visible="IsSolved"
                            Moves="Moves"
                            OnRetry="Restart"
                            OnNew="NewGame" />
            </div>

            <span class="position-fixed bottom-0 end-0 mb-4 me-4 p-3" @onclick="ToggleSound">
                <i class="@soundIcon"></i>
            </span>
        </div>
    </div>
</div>
