@inject IJSRuntime JsRuntime

@if (Visible)
{
    <div class="overlay">
        <div class="overlay-content p-5">
            <div class="d-flex flex-column gap-4">
                <p><span>CONGRATS!</span> You solved the <br />puzzle at <em>@Moves</em> moves <span>:)</span></p>

                <span class="performance-msg">"@Performance"</span>

                <div class="d-flex gap-3 justify-content-center">
                    <button class="refresh-btn" @onclick="OnNew">NEW GAME</button>
                    <button class="reset-btn" @onclick="OnRetry">TRY AGAIN</button>
                </div>
            </div>
        </div>
    </div>
}
