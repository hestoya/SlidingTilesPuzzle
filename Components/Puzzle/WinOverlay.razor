@inject IJSRuntime JsRuntime

@if (Visible)
{
    <div class="overlay">
        <div class="overlay-content p-5">
            <div class="d-flex flex-column gap-4">
                <p><span>CONGRATS!</span> You solved the <br />puzzle at <em>@Moves</em> moves <span>:)</span></p>

                <span class="performance-msg">"@Performance"</span>

                <div class="d-flex gap-3 justify-content-center">
                    <button class="refresh-btn" @onclick="OnNew">NEW GAME</button>
                    <button class="reset-btn" @onclick="OnRetry">TRY AGAIN</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public int Moves { get; set; }
    [Parameter] public EventCallback OnRetry { get; set; }
    [Parameter] public EventCallback OnNew { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (Visible && JsRuntime != null)
        {
            await JsRuntime.InvokeVoidAsync("launchConfetti");
            await JsRuntime.InvokeVoidAsync("playWinSound");
        }
    }

    private string Performance => Moves switch
    {
        <= 22 => "You are an absolute legend. Way to go, champ!",
        <= 30 => "Insane moves! That was clean!",
        <= 40 => "Solid play! You got skills!",
        <= 55 => "Nicely done! You stayed in control.",
        <= 75 => "Hey, a win is a win!",
        _ => "You fought bravely… and you won."
    };

}
